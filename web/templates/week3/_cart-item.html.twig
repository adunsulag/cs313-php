<div class="card mb-3">
    <div class="card-body">
        <div class="row">
            <div class="col-2">
                <img class="card-img-top" src="{{item.img}}" />
            </div>
            <div class="col-5">
                {{item.name}}
            </div>
            <div class="col-1">
                <input class="form-control" type="text" value="{{item.count}}" name="quantity" />
                
            </div>
            <div class="col-2">
                <input type="button" class="setQuantity btn btn-secondary" value="Update Cart" />
            </div>
            <div class="col-2 text-danger">
                ${{item.total|number_format(2, '.', ',')}}
            </div>
        </div>
    </div>
</div>